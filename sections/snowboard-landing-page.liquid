<script>
  // Smooth scrolling for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });

  // Add to cart functionality
  document.querySelectorAll('.btn-bundle').forEach(button => {
    button.addEventListener('click', function(e) {
      e.preventDefault();
      // Add your Shopify cart functionality here
      const productId = this.href.split('id=')[1];
      console.log('Adding to cart:', productId);
      
      // Example: Replace with actual Shopify cart add
      fetch('/cart/add.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          id: productId,
          quantity: 1
        })
      })
      .then(response => response.json())
      .then(data => {
        // Handle success - maybe show a notification or redirect
        window.location.href = '/cart';
      })
      .catch(error => {
        console.error('Error:', error);
      });
    });
  });
</script>

