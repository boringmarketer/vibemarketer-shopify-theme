{% comment %}
  Urgency Banner Section - K2 Inspired
  High-converting promotional banner
{% endcomment %}

<div class="urgency-banner">
  <div class="urgency-banner__content">
    {% if section.settings.urgency_icon %}
      <span class="urgency-banner__icon">{{ section.settings.urgency_icon }}</span>
    {% endif %}
    
    {% if section.settings.urgency_text %}
      <span class="urgency-banner__text">{{ section.settings.urgency_text }}</span>
    {% endif %}
    
    {% if section.settings.discount_text %}
      <span class="urgency-banner__discount">{{ section.settings.discount_text }}</span>
    {% endif %}
    
    {% if section.settings.timer_text %}
      <span class="urgency-banner__timer">{{ section.settings.timer_text }}</span>
    {% endif %}
    
    {% if section.settings.cta_text and section.settings.cta_link %}
      <a href="{{ section.settings.cta_link }}" class="urgency-banner__cta">
        {{ section.settings.cta_text }}
      </a>
    {% endif %}
  </div>
</div>

<style>
.urgency-banner {
  background: linear-gradient(135deg, #ff3333 0%, #ff6b35 100%);
  color: white;
  text-align: center;
  padding: 1rem;
  font-family: 'Roboto Condensed', sans-serif;
  font-weight: 700;
  position: relative;
  overflow: hidden;
  z-index: 100;
}

.urgency-banner::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0% { left: -100%; }
  100% { left: 100%; }
}

.urgency-banner__content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1rem;
  flex-wrap: wrap;
  max-width: 1200px;
  margin: 0 auto;
  position: relative;
  z-index: 2;
}

.urgency-banner__icon {
  font-size: 1.25rem;
}

.urgency-banner__text {
  font-size: 1rem;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

.urgency-banner__discount {
  font-size: 1.125rem;
  font-weight: 900;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.urgency-banner__timer {
  font-size: 0.875rem;
  opacity: 0.9;
  border: 1px solid rgba(255,255,255,0.3);
  padding: 0.25rem 0.75rem;
  border-radius: 3px;
  background: rgba(0,0,0,0.2);
}

.urgency-banner__cta {
  background: white;
  color: #ff3333;
  padding: 0.5rem 1.5rem;
  border-radius: 3px;
  text-decoration: none;
  font-weight: 900;
  font-size: 0.875rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  transition: all 0.2s ease-out;
  border: 2px solid white;
}

.urgency-banner__cta:hover {
  background: transparent;
  color: white;
  transform: translateY(-1px);
}

@media (max-width: 768px) {
  .urgency-banner__content {
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .urgency-banner__text,
  .urgency-banner__discount {
    font-size: 0.875rem;
  }
}
</style>

{% schema %}
