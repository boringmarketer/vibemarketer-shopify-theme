  "name": "Urgency Banner",
  "class": "section section-urgency-banner",
  "settings": [
    {
      "type": "header",
      "content": "Urgency Banner Settings"
    },
    {
      "type": "text",
      "id": "urgency_icon",
      "label": "Icon",
      "default": "üî•",
      "info": "Emoji or icon to display"
    },
    {
      "type": "text",
      "id": "urgency_text",
      "label": "Urgency Text",
      "default": "SEASON LAUNCH SPECIAL",
      "info": "Main urgency message"
    },
    {
      "type": "text",
      "id": "discount_text",
      "label": "Discount Text",
      "default": "SAVE UP TO $700 ON COMPLETE SETUPS",
      "info": "Discount or offer details"
    },
    {
      "type": "text",
      "id": "timer_text",
      "label": "Timer Text",
      "default": "‚è∞ LIMITED TIME: 7 DAYS LEFT",
      "info": "Time limitation text"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "SHOP NOW",
      "info": "Call to action button text"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link",
      "default": "/collections/all",
      "info": "Where the CTA button links to"
    }
  ],
  "presets": [
    {
      "name": "Urgency Banner"
    }
  ]
}
{% endschema %}